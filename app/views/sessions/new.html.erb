<head>
<% provide(:title, "Log in") %>
<link href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Zen+Kurenaido&display=swap" rel="stylesheet">
</head>

<%= render "layouts/header" %>


<!-- Log In --> 
<div class="row justify-content-center" style="margin: 80px 20px 10px 30px;">  
  <div class="card-div col-md-6 col-md-offset-3" align="center">
    <h1 style="width: 200px;"> Welcome to StyleMe, your digital Outfit Planner!</h1> 
  </div>

  <div class="col-md-6 col-md-offset-3">
    <h2 align="center">Log in</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

</body>
