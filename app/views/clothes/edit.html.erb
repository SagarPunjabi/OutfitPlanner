<h1>Editing Clothe</h1>

<div style="display: flex;">
    <%= image_tag(@clothe.photo,height: 200, width: 200) if @clothe.photo.attached? %>
    <%= render 'form', clothe: @clothe %>
  
</div>

<div>
    <%= button_to 'Destroy', @clothe, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<%= link_to 'Back', 'javascript:history.go(-1);' %> 

