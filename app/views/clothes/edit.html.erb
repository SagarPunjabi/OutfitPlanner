<head>
<% provide(:title, "Edit Clothes") %>
<link href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Zen+Kurenaido&display=swap" rel="stylesheet">
</head>

<%= render "layouts/header" %>
<div style="display: flex; justify-content:center;">
<h1 style="margin-top: 30px;">Edit Clothes</h1>
</div>
<div id = "begin-exploring" class="row justify-content-center" style="margin: 20px 20px 10px 30px;">  
  <div class="card-div col-md-6 col-md-offset-3" align="center">
    <%= image_tag(@clothe.photo, style:'border-radius: 50%; height:350px; width: 350px') if @clothe.photo.attached? %>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <%= render 'form', clothe: @clothe %>
    <%= button_to 'Remove from closet', @clothe, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn green-btn" %>
  </div>
</div>

