<head>
<% provide(:title, "Sign Up") %>
<link href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Zen+Kurenaido&display=swap" rel="stylesheet">
</head>
<%= render "layouts/header" %>
<div class="row justify-content-center" style="margin: 80px 20px 10px 30px;">  
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-with-line" style="padding-bottom: 10px;">Sign up</h1>
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= f.submit "Register", class: "btn green-btn" %>
      <% end %>             
  </div>      
</div> 